@model IEnumerable<AutoDealer.Web.Models.Car>

<div>
    <h1 class="text-center">Авто на складе</h1>
    @{
        await Html.PartialAsync("Notification");
    }

    <div class="col-2 text-end mb-2">
        <a class="btn btn-outline-dark" asp-action="create" asp-controller="car">Добавить</a>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th class="text-start">
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th class="text-start">
                    @Html.DisplayNameFor(model => model.Company.Title)
                </th>
                <th class="text-start">
                    @Html.DisplayNameFor(model => model.Model.Title)
                </th>
                <th class="text-start">
                    @Html.DisplayNameFor(model => model.ProduceDate)
                </th>
                <th class="text-start">
                    @Html.DisplayNameFor(model => model.Engine.Capacity)
                </th>
                <th class="text-start">
                    @Html.DisplayNameFor(model => model.Engine.Type.Title)
                </th>
                <th class="text-start">
                    @Html.DisplayNameFor(model => model.Transmission.TransmissionType)
                </th>
                <th class="text-start">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-start">
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td class="text-start">
                        @Html.DisplayFor(modelItem => item.Company.Title)
                    </td>
                    <td class="text-start pl-1 pr-0">
                        @Html.DisplayFor(modelItem => item.Model.Title)
                    </td>
                    <td class="text-start">
                        @Html.DisplayFor(modelItem => item.ProduceDate)
                    </td>
                    <td class="text-start">
                        @Html.DisplayFor(modelItem => item.Engine.Capacity)
                    </td>
                    <td class="text-start">
                        @Html.DisplayFor(modelItem => item.Engine.Type.Title)
                    </td>
                    <td class="text-start">
                        @Html.DisplayFor(modelItem => item.Transmission.TransmissionType)
                    </td>
                    <td class="text-start">
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td class="d-flex flex-grow-1 text-center control_table_btns">
                        <a class="text-info me-10 mr-2" onclick="showCarDetails(@item.Id)"><span class="badge badge-info p-2"><i class="ti-info-alt mr-1"></i> инфо</span></a>
                        <a class="text-info me-10 editCar mr-2" id="@item.Id"><span class="badge badge-secondary p-2"><i class="ti-marker-alt mr-1"></i> изменить</span></a>
                        <a class="text-info me-10" onclick="onDeleteCar(@item.Id)"><span class="badge badge-danger p-2"><i class="ti-trash"></i> удалить</span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@{
    await Html.RenderPartialAsync("ModalCarDetails");
}

@{
    await Html.RenderPartialAsync("ModalDeleteDialog", "запись автомобиля");
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script src="/js/carAdmin.js"></script>