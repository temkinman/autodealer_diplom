@model AutoDealer.Web.Models.Model

@{
    ViewData["Title"] = "Редактирование марки автоы";
}

<h2 class="text-start my-3">Редактирование записи</h2>
<div class="row">
    <form asp-controller="Model" asp-action="Edit" enctype="multipart/form-data" class="col-4"
          data-ajax-method="post" data-ajax-update="#resultContent" data-ajax="true" >
        <input type="hidden" asp-for="Company.Id"/>
        <input type="hidden" asp-for="Id"/>
        <p>Компания @Model.Company.Title</p>
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-outline-primary" />
            <a id="cancelBtn" value="Отмена" class="btn btn-outline-danger" >Отмена</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script type="text/javascript" src="./js/carModel.js"></script>
