@model AutoDealer.Web.Models.Model

@{
    ViewData["Title"] = "CompanyCreate";
}

<h1 class="text-center">Создание модели автомобиля</h1>
<div class="row">
    <form asp-controller="Model" asp-action="Create" enctype="multipart/form-data" class="col-6"
          data-ajax-method="post" data-ajax-update="#resultContent" data-ajax="true" >
        <input type="hidden" asp-for="Company.Id"/>
        <p>Компания @Model.Company.Title</p>
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Создать" class="btn btn-outline-primary" />
            <a asp-controller="Model" asp-action="Index" type="button" value="Отмена" class="btn btn-outline-danger" >Отмена</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
