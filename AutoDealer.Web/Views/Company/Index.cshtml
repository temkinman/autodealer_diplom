@model IEnumerable<AutoDealer.Web.Models.Company>

<h2 class="col-8 text-center my-3">Марки авто</h2>
@{
   await Html.PartialAsync("Notification");
}

<div class="col-2 text-end mb-2">
    <a class="btn btn-outline-dark" id="CreateCompany">Создать</a>
</div>
<table class="col-8 table table-bordered table-striped">
    <thead>
        <tr class="d-flex">
            <th class="text-start col-1">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th class="text-start col-3">
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th class="text-start col-3">
                @Html.DisplayNameFor(model => model.Country)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="d-flex">
                <td class="text-start col-1">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td class="text-start col-3">
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td class="text-start col-3">
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td class="d-flex flex-grow-1 justify-content-center control_table_btns col-5">
                    <a class="text-info me-10 editCar mr-2 editCompany" id="@item.Id"><span class="badge badge-secondary p-2"><i class="ti-marker-alt mr-1"></i> изменить</span></a>
                    <a class="text-info me-10 delCompany" id=@item.Id onclick="onDeleteCompany(@item.Id)"><span class="badge badge-danger p-2"><i class="ti-trash mr-1"></i> удалить</span></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.Hidden("currentAdminMenu", (object)ViewBag.AdminPanel)

@{
   await Html.RenderPartialAsync("ModalDeleteDialog", "марку авто");
}

<div class="alert" role="alert" id="result"></div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script type="text/javascript" src="./js/carCompany.js"></script>

