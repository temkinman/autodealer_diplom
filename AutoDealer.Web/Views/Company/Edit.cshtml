@model AutoDealer.Web.Models.Company

<h2 class="text-start my-3">Редактирование записи</h2>
<div class="row">
    <form asp-controller="Company" asp-action="Edit" enctype="multipart/form-data" method="post" class="col-4"
          data-ajax-method="post" data-ajax-update="#resultContent" data-ajax="true">
        <input asp-for="Id" type="hidden" />
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control text-end" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Country" class="control-label"></label>
            <input asp-for="Country" class="form-control text-end" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Изменить" class="btn btn-outline-primary" />
            <a id="cancelBtn" value="Отмена" class="btn btn-outline-danger">Отмена</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script type="text/javascript" src="./js/carCompany.js"></script>

