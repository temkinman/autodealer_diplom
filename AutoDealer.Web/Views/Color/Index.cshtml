@model IEnumerable<AutoDealer.Web.Models.Color>

<h2 class="col-8 text-center my-3">Автомобильные цвета</h2>
@{
   await Html.PartialAsync("Notification");
}

<div class="col-2 text-end mb-2">
    <a class="btn btn-outline-dark" id="CreateColor">Создать</a>
</div>
<table class="col-8 table table-bordered table-striped">
    <thead>
        <tr>
            <th class="col-1 text-start">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th class="col-3 text-start">
                @Html.DisplayNameFor(model => model.Title)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="col-1 text-start">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td class="col-3 text-start">
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td class="col-3 text-center control_table_btns">
                    <a class="text-info me-10 editColor mr-2" id="@item.Id"><span class="badge badge-secondary p-2"><i class="ti-marker-alt mr-1"></i> изменить</span></a>
                    <a class="text-info me-10" onclick="onDeleteColor(@item.Id)"><span class="badge badge-danger p-2"><i class="ti-trash mr-1"></i> удалить</span></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
   await Html.RenderPartialAsync("ModalDeleteDialog", "цвет авто");
}

<div class="alert" role="alert" id="result"></div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script type="text/javascript" src="./js/carColor.js"></script>
