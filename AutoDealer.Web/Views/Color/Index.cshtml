@model IEnumerable<AutoDealer.Web.Models.Color>


<h2 class="col-8 text-center my-3">Автомобильные цвета</h2>
@{
   await Html.PartialAsync("Notification");
}

<div class="col-2 text-end mb-2">
    <a class="btn btn-outline-dark" id="CreateColor">Создать</a>
</div>
<table class="col-8 table table-bordered table-striped">
    <thead>
        <tr>
            <th class="col-1 text-start">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th class="col-3 text-start">
                @Html.DisplayNameFor(model => model.Title)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="col-1 text-start">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td class="col-3 text-start">
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td class="col-4 text-center">
                    <a class="btn-sm btn-outline-secondary editColor" id=@item.Id>Изменить</a>
                    <a class="btn-sm btn-outline-danger" id=@item.Id onclick="onDeleteColor(@item.Id)">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
   await Html.RenderPartialAsync("ModalDeleteDialog", "цвет авто");
}

<div class="alert" role="alert" id="result"></div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script type="text/javascript" src="./js/carColor.js"></script>
