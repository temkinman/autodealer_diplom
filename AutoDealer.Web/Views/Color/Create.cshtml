@model AutoDealer.Web.Models.Color

@{
    ViewData["Title"] = "Создание цвета автомобиля";
}

<h1 class="text-center">Создание цвета автомобиля</h1>
<div class="row">
    <form asp-controller="Color" asp-action="Create" enctype="multipart/form-data" class="col-6"
          data-ajax-method="post" data-ajax-update="#resultContent" data-ajax="true">
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Создать" class="btn btn-outline-primary" />
            <a id="cancelBtn" value="Отмена" class="btn btn-outline-danger">Отмена</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script type="text/javascript" src="./js/carColor.js"></script>
