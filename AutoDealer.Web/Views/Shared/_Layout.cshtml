<body class="hold-transition theme-primary bg-img" style="background-image: url(/assets/images/auth-bg/bg-1.jpg)">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm mb-3">
        <div class="container justify-content-center">
            <a class="navbar-brand menu-link-logo d-none d-md-block d-lg-block d-xl-block" asp-area="" asp-controller="car" asp-action="Index">AutoDealer</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex ">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item menu-link"><a class="nav-link text-dark" asp-area="" asp-controller="Car" asp-action="Index">авто</a></li>
                    <li class="nav-item menu-link"><a class="nav-link text-dark" asp-area="" asp-controller="Sale" asp-action="Index">продажи</a></li>
                    <li class="nav-item menu-link"><a class="nav-link text-dark" asp-area="" asp-controller="About" asp-action="Index">о нас</a></li>
                    <li class="nav-item menu-link"><a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">админка</a></li>
                    <li class="nav-item menu-link"><a class="nav-link text-dark" asp-area="" asp-controller="Car" asp-action="Create">принять авто new</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="d-flex align-items-center col-4 account_li">
							<ul class="navbar-nav flex-grow-1 d-flex justify-content-end align-items-center">
								<li class="nav-item menu-link"><span>@User.Identity.Name</span></li>
								<li class="nav-item menu-link"><a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right"></i></a></li>
							</ul>
						</li>
                    }
                    else
                    {
                        <li class="d-flex align-items-center justify-content-end col-4 account_li"><a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login" tabindex="5"><i class="bi bi-box-arrow-in-right"></i></a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <header>
        <div id="header">
            <div class="top_info">
                <div class="logo">
                    <a class="navbar-brand" asp-area="" asp-controller="Car" asp-action="Index">
                        <img src="~/images/logo.png" alt="logo">
                    </a>

                    <a href="#">Auto<span>Dealer</span></a>
                </div>
                <div class="header_contacts">
                    <div class="phone">+375 (29) 455-55-95</div>
                    <div>Беларусь г.Гомель ул.Советская д.59</div>
                </div>
            </div>
        </div>
    </header>
    <div class="container h-p75">
        @*<main role="main" class="pb-3">*@
        @RenderBody()
